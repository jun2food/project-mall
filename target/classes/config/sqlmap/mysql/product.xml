<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mall.product.ProductDAO">
	<select id="selectCount" resultType="int">
		select count(*)
		from product
	</select>
	
	<resultMap type="productVO" id="productMap">
		<result column="p_no" property="pNo"/>
		<result column="p_price" property="pPrice"/>
		<result column="p_name" property="pName"/>
		<result column="p_detail" property="pDetail"/>
		<result column="p_reg_date" property="pRegDate"/>
		<result column="p_ori" property="pOri"/>
		<result column="p_real" property="pReal"/>
		<result column="p_path" property="pPath"/>
	</resultMap>
	
	<select id="selectRegDate" parameterType="int" resultMap="productMap">
		select *
		from product
		order by p_reg_date desc
		<![CDATA[ limit  #{page1}, 8 ]]>
	</select>
	<select id="selectLowPrice" parameterType="int" resultMap="productMap">
		select *
		from product
		order by p_price 
		<![CDATA[ limit  #{page1}, 8 ]]>
	</select>
	<select id="selectHighPrice" parameterType="int" resultMap="productMap">
		select *
		from product
		order by p_price desc
		<![CDATA[ limit  #{page1}, 8 ]]>
	</select>
	<select id="selectName" parameterType="int" resultMap="productMap">
		select *
		from product
		order by p_name
		<![CDATA[ limit  #{page1}, 8 ]]>
	</select>
</mapper>











